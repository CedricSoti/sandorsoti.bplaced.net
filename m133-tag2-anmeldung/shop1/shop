<body>

<div class="w3-container w3-padding-32">
  <h2 class="w3-center">Willkommen im Shop</h2>
  <div class="w3-row-padding">

    <!-- Beispiel-Produkt -->
    <div class="w3-col l3 m6 w3-margin-bottom">
      <div class="w3-card">
        <img src="/w3images/house5.jpg" style="width:100%">
        <div class="w3-container">
          <h5>Design-Stuhl</h5>
          <p>CHF 99.–</p>
          <button class="w3-button w3-black" onclick="addToCart('Design-Stuhl', 99)">In den Warenkorb</button>
        </div>
      </div>
    </div>

    <!-- Du kannst hier weitere Produkte nach dem selben Muster einfügen -->

  </div>
</div>

<script>
  function addToCart(name, price) {
    let cart = JSON.parse(localStorage.getItem('cart')) || [];
    cart.push({ name, price });
    localStorage.setItem('cart', JSON.stringify(cart));
    alert(`${name} wurde zum Warenkorb hinzugefügt.`);
  }
</script>

